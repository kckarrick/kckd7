        'not null' => TRUE,
      ),
      'email' => array(
        'description' => 'Contributor email',
        'type' => 'varchar',
        'length' => 255,
        'not null' => TRUE,
      ),
      'amount_options' => array(
        'description' => 'Amount option selection',
        'type'=> 'varchar',
        'length' => 32,
        'not null' => FALSE,
      ),
      'amount' => array(
        'description' => 'Contribution amount',
        'type' => 'int',
        'size' => 'medium',
        'not null' => TRUE,
        'unsigned' => TRUE,
        'default' => 0,
      ),
      'timestamp' => array(
        'description' => 'Contribution timestamp',
        'type' => 'int',
