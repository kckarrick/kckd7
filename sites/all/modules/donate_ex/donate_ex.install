function donate_ex_update_6100() {
  $ret = array();

  $success = drupal_install_schema('donate_ex_payments');
  if ($success) {
    $message = 'Donate Ex schema successfully installed';
  }
  else {
    $message = 'Donate Ex schema install failed';
  }
  drupal_set_message($message);
  watchdog('donate_ex', $message);
  return $ret;
}


