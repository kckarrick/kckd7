/**
 *  Implements hook_enable();
 *
 */
function donate_ex_enable() {

  if (!db_table_exists('donate_ex_payments')) {
    $schema = module_invoke('donate_ex', 'schema');
    db_create_table('donate_ex_payments', $schema['donate_ex_payments']);
  }
}

/**
 *  Add the donate_ex_payments table.
 */
function donate_ex_update_6102() {
  $ret = array();

  $success = drupal_install_schema('donate_ex');
  if ($success) {
    $message = 'Donate Extend schema successfully installed';
  }
  else {
    $message = 'Donate Extend schema install failed';
  }
  drupal_set_message($message);
  watchdog('donate_ex', $message);
  return $ret;
}


